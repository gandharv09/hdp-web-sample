<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>HDP Web Sample</display-name>

    <servlet>
        <servlet-name>WebHdfsServlet</servlet-name>
        <servlet-class>hdp.webapp.WebHdfsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HdfsServlet</servlet-name>
        <servlet-class>hdp.webapp.HdfsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HBaseServlet</servlet-name>
        <servlet-class>hdp.webapp.HBaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HiveServlet</servlet-name>
        <servlet-class>hdp.webapp.HiveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HiveJdbcServlet</servlet-name>
        <servlet-class>hdp.webapp.HiveJdbcServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KafkaServlet</servlet-name>
        <servlet-class>hdp.webapp.KafkaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WebHdfsServlet</servlet-name>
        <url-pattern>/webhdfs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HdfsServlet</servlet-name>
        <url-pattern>/hdfs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HBaseServlet</servlet-name>
        <url-pattern>/hbase</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HiveServlet</servlet-name>
        <url-pattern>/hive</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HiveJdbcServlet</servlet-name>
        <url-pattern>/hive-jdbc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KafkaServlet</servlet-name>
        <url-pattern>/kafka</url-pattern>
    </servlet-mapping>

</web-app>
